<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="false">

    <data>
        <variable
            name="artist"
            type="com.example.moviles_g13.model.Artist" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="375dp"
        android:layout_height="725dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp">
        <TextView
            android:id="@+id/artist_name"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="@{artist.name}"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="23sp"/>
        <ImageView
            android:id="@+id/artist_logo"
            android:layout_width="375dp"
            android:layout_height="350dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:src="@drawable/artists"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/artist_birthdate"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text='@{artist.birthDate}'/>
        <TextView
            android:id="@+id/artist_description"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@{artist.description}"
            android:textColor="@color/black"
            android:justificationMode="inter_word"/>
    </LinearLayout>

</layout>